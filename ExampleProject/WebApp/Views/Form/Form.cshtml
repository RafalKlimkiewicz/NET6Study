@model Product
@{
    Layout = "_SimpleLayout";
}

<h5 class="bg-primary text-white text-center p-2">HTML Form</h5>

<form asp-action="submitform" method="post" id="htmlform">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" asp-format="{0:#,###.00}" />
    </div>
    <div class="form-group">
        <label>CateogryId</label>
        <input class="form-control" asp-for="Category.CategoryId" />
    </div>
    <div class="form-group">
        <label>SupplierId</label>
        <input class="form-control" asp-for="Supplier.SupplierId" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Sumbit</button>
</form>