@model Product
<!DCTYPE html>
<html>
<head>
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <h6 class="bg-primary text-white text-center m-2 p-2">Water sports</h6>
    <div class="m-2">
        <table class="table table-sm table-striped table-bordered" data-id="@Model?.ProductId">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>
                            @switch (Model?.Name)
                            {
                                case "Kayak":
                                    @:Small Boat
                                    break;
                                case "Lifejacket":
                                    @:Flotation aid
                                    break;
                                default:
                                    @if (Model?.Price > 200)
                                    {
                                        @:Luxyry @Model?.Name
                                    }
                                    else
                                    {
                                        @:Basic @Model?.Name
                                    }
                                    break;
                            }
                    </td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>@Model?.Price.ToString("c")</td>
                </tr>
                <tr>
                    <th>Tax</th>
                    <td>@Model?.Price * 0.2m</td>
                </tr>
                <tr>
                    <th>Tax</th>
                    <td>@(Model?.Price * 0.2m)</td>
                </tr>
                <tr>
                    <th>Category ID</th>
                    <td>@Model?.CategoryId</td>
                </tr>
                <tr>
                    <th>Supplier ID</th>
                    <td>@Model?.SupplierId</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
