@model IEnumerable<Product>
@{
    Layout = null;
}
@{
    decimal average = Model?.Average(prop => prop.Price) ?? 0;
}
<!DCTYPE html>
<html>
<head>
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <h6 class="bg-primary text-white text-center m-2 p-2">Products</h6>
    <div class="m-2">
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var p in Model ?? Enumerable.Empty<Product>())
                    {
                    <partial name="_RowPartial" model="p" />
                    }
            </tbody>
        </table>
    </div>
</body>
</html>
