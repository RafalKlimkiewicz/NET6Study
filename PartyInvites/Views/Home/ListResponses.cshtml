@model IEnumerable<PartyInvites.Models.GuestReponse>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Responses</title>
</head>
<body>
    <div class="text-center p-2">
        <h2>List of people:</h2>
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var guestReponse in @Model)
                {
                    <tr>
                        <td>@guestReponse.Name</td>
                        <td>@guestReponse.Phone</td>
                        <td>@guestReponse.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>